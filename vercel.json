{
    "version": 2,
    "builds": [{
        "src": "wsgi.py",
        "use": "@vercel/python",
        "config": {
            "maxDuration": 300,
            "maxLambdaSize": "50mb",
            "nodeVersion": "18.x"
        }
    }],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "wsgi.py"
        }
    ],
    "functions": {
        "api/*.py": {
            "memory": 3008,
            "maxDuration": 300
        }
    }
} 